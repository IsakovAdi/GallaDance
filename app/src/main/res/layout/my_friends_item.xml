<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="-8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friends_image"
        android:layout_width="@dimen/user_friends_item_image_size"
        android:layout_height="@dimen/user_friends_item_image_size"
        android:scaleType="centerCrop"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        android:src="@drawable/user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/is_online_icon"
        android:layout_width="@dimen/online_green_icon_size"
        android:layout_height="@dimen/online_green_icon_size"
        android:layout_marginEnd="@dimen/dimen_4dp"
        android:visibility="gone"
        android:src="@color/green"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@id/friends_image"
        app:layout_constraintEnd_toEndOf="@id/friends_image" />

</androidx.constraintlayout.widget.ConstraintLayout>